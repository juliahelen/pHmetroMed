<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <EditText
        android:id="@+id/editNomePaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_PairedDevices"
        android:hint="@string/nome_completo"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editDataNascPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editNomePaciente"
        android:hint="@string/data_de_nascimento"
        android:inputType="date" />

    <EditText
        android:id="@+id/editConvenio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editDataNascPaciente"
        android:hint="@string/convenio"
        android:inputType="text"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/viewPH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/ph"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/statusMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="@string/phmetro"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_PairedDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:onClick="searchPairedDevices"
        android:text="@string/dispositivos_pareados" />

    <Button
        android:id="@+id/configurarExame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sincDataehora"
        android:layout_centerHorizontal="true"
        android:onClick="configExame"
        android:text="@string/configurar_exame" />

    <Button
        android:id="@+id/sincDataehora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewPH"
        android:layout_centerHorizontal="true"
        android:text="@string/sincronizar_data_hora" />

    <Button
        android:id="@+id/inicarExame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/configurarExame"
        android:layout_centerHorizontal="true"
        android:text="@string/iniciar_exame" />

</RelativeLayout>
